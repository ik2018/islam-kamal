<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_user__profile_"
    tools:context="com.example.islamkamal.as7allklam.User_Profile_Activity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:id="@+id/userimageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/person" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Islam Kamal"
        android:id="@+id/nametextView"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/userimageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="islam.kamal.fci@gmail.com"
        android:id="@+id/emailtextView"
        android:layout_below="@+id/userimageView"
        android:layout_alignLeft="@+id/userimageView"
        android:layout_alignStart="@+id/userimageView"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="20dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailtextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/user_profile_style">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="14"
                android:id="@+id/num_tweets_textView3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TWEETS"
                android:id="@+id/textView4"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="17dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/user_profile_style">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="30"
                android:id="@+id/textView5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FOLLOWERS"
                android:id="@+id/textView3"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="17dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:background="@drawable/user_profile_style">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="44"
                android:id="@+id/textView6"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="FOLLOWING"
                android:id="@+id/textView7"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textStyle="italic"
                android:textSize="17dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_below="@+id/linearLayout"
        android:layout_alignLeft="@+id/emailtextView"
        android:layout_alignStart="@+id/emailtextView"
        android:layout_marginTop="30dp" />
</RelativeLayout>
