<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ss.contact_project.NumberOnClick_Activity"
>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/Name_TextView"
        android:layout_below="@+id/Close_btn"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_below="@+id/Name_TextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp">

        <Button
            android:layout_width="91dp"
            android:layout_height="33dp"
            android:id="@+id/Phone_btn"
            android:background="@drawable/call" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/Phone_textview"
            android:layout_weight="6" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout2"
        android:weightSum="1"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="91dp"
            android:layout_height="33dp"
            android:id="@+id/Email_btn"
            android:singleLine="false"
            android:layout_weight="0.03"
            android:background="@drawable/email" />

        <TextView
            android:layout_width="226dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/Email_textview"
            android:layout_weight="0.01" />
    </LinearLayout>

    <Button
        android:layout_width="123dp"
        android:layout_height="37dp"
        android:id="@+id/Edit_btn"
        android:background="@drawable/edit"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="123dp"
        android:layout_height="37dp"
        android:id="@+id/Delete_btn"
        android:background="@drawable/delete"
        android:layout_alignTop="@+id/Edit_btn"
        android:layout_toRightOf="@+id/Name_TextView"
        android:layout_toEndOf="@+id/Name_TextView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Close_btn"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/linearLayout3"
        android:layout_alignEnd="@+id/linearLayout3"
        android:background="@drawable/close" />
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/r"
    android:layout_above="@+id/Edit_btn"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_marginBottom="75dp">


    <Button
        android:layout_width="123dp"
        android:layout_height="37dp"
        android:id="@+id/Massege_btn"
        android:background="@drawable/message"

        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="123dp"
        android:layout_height="37dp"
        android:id="@+id/ShowMap_btn"
        android:background="@drawable/mapshow"
        android:layout_alignTop="@+id/Massege_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
</RelativeLayout>
